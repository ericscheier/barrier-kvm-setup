# Barrier KVM Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Barrier Server Configuration
BARRIER_SERVER_IP=192.168.1.206
BARRIER_PORT=24800
BARRIER_CLIENT_NAME=client
BARRIER_SERVER_NAME=muir

# Logging and Debug
BARRIER_LOG_LEVEL=INFO
BARRIER_DEBUG=false
BARRIER_LOG_FILE=/home/$USER/Documents/apps/barrier/logs/barrier.log

# Display Configuration
DISPLAY=:0
XDG_SESSION_TYPE=x11

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Firewall Settings
FIREWALL_ENABLED=true
FIREWALL_TYPE=ufw
# Options: ufw, firewalld, iptables

# Network Discovery
AUTO_DISCOVER_SERVER=false
NETWORK_SCAN_RANGE=auto
# Set to 'auto' for automatic detection or specify like '192.168.1.0/24'

# Connection Settings
CONNECTION_TIMEOUT=30
RETRY_COUNT=10
RETRY_INTERVAL=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SSL/TLS Settings
SSL_ENABLED=false
SSL_CERT_PATH=/home/$USER/.local/share/barrier/SSL/Barrier.pem
SSL_GENERATE_CERT=false

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Auto-start Configuration
AUTO_START_SERVICE=false
BARRIER_ROLE=auto
# Options: server, client, auto (auto-detect based on hostname/environment)

# Service Management
RESTART_ON_FAILURE=true
RESTART_DELAY=5
MAX_RESTART_ATTEMPTS=15

# Daemon Mode
START_DAEMON=false
DAEMON_LOG_FILE=/home/$USER/Documents/apps/barrier/logs/daemon.log

# =============================================================================
# POLYGLOT-WORKBENCH INTEGRATION
# =============================================================================

# Polyglot-Workbench Activation
POLYGLOT_ACTIVATION=false
POLYGLOT_AUTO_DETECT_ROLE=true
POLYGLOT_VERIFY_INSTALLATION=true

# Auto-start on Activation
ACTIVATE_START_SERVICES=false
ACTIVATE_VERIFY_SERVICES=true
ACTIVATE_TIMEOUT=180

# Role Detection Rules (for polyglot-workbench)
# If hostname contains these strings, automatically assign role
SERVER_HOSTNAME_PATTERNS=server,main,host,primary
CLIENT_HOSTNAME_PATTERNS=client,laptop,mobile,secondary

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Performance Tuning
RELATIVE_MOUSE_MOVES=false
SCREEN_SAVER_SYNC=true
SWITCH_DELAY=250
CLIPBOARD_SHARING=true

# Multi-Monitor Support
MULTI_MONITOR_MODE=single_logical
# Options: single_logical, per_monitor (future)

# Backup and Recovery
AUTO_BACKUP_CONFIG=true
BACKUP_RETENTION_DAYS=30
CONFIG_BACKUP_DIR=/home/$USER/.barrier/backups

# Development and Testing
DEVELOPMENT_MODE=false
TEST_MODE=false
MOCK_CONNECTIONS=false

# =============================================================================
# ENVIRONMENT OVERRIDES
# =============================================================================

# These can be overridden by environment variables
# Example: export BARRIER_SERVER_IP=10.0.0.100

# Custom Scripts
PRE_START_SCRIPT=""
POST_START_SCRIPT=""
PRE_STOP_SCRIPT=""
POST_STOP_SCRIPT=""

# Integration Hooks
ON_CLIENT_CONNECT=""
ON_CLIENT_DISCONNECT=""
ON_SERVER_START=""
ON_SERVER_STOP=""